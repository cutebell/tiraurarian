
<div class="devise-container">

  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal", role: "form" }) do |f| %>
    <div class="form-group row">
      <%= f.label :login_id, class: "col-sm-4 col-form-label text-sm-right" %>
      <div class="col"><%= f.text_field :login_id, class: "form-control", maxlength: 16, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-sm-4 col-form-label text-sm-right" %>
      <div class="col"><%= f.password_field :password, class: "form-control", autocomplete: "current-password" %></div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group row">
        <div class="offset-sm-4 col-sm-8">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <div class="form-group row">
        <div class="offset-sm-4 col-sm-8">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

</div>
