<div class="title">チラモン一覧</div>
<%= render partial: "/layouts/tiramon_nav" %>

<div class="tweet-container list">

  <% @tiramons.map.with_index do |tiramons, index| %>
    <% rank = index %>
    <div class="hukidasi width-full">
      <h1><%= Constants::TIRAMON_RULE_NAME[rank] %> (<%= tiramons.size %>)</h1>
      <%= render partial: "/tiramons/tiramons", locals: { tiramons: tiramons, myTiramon: false, inNegotiation: false } %>
    </div>
  <% end %>
</div>

<%= render partial: "/layouts/tiramon_nav" %>
