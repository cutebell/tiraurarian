
<div class="devise-container">

  <h2>ユーザー新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal", role: "form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= f.label :login_id, class: "col-sm-4 col-form-label text-sm-right" %>
      <div class="col"><%= f.text_field :login_id, class: "form-control", maxlength: 16, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <%= f.label :name, class: "col-sm-4 col-form-label text-sm-right" %>
      <div class="col">
        <div>
          <% if @maximum_name_length %>
            <em>(<%= @maximum_name_length %> characters maximum)</em>
          <% end %>
        </div>
        <div><%= f.text_field :name, class: "form-control", maxlength: 16 %></div>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-sm-4 col-form-label text-sm-right" %>
      <div class="col">
        <div>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <div><%= f.password_field :password, class: "form-control", autocomplete: "new-password" %></div>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, class: "col-sm-4 col-form-label text-sm-right" %>
      <div class="col"><%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %></div>
    </div>

    <div class="form-group row">
      <%= f.label :avatar, class: "col-sm-4 col-form-label text-sm-right" %>
      <div class="col"><%= f.file_field :avatar %></div>
    </div>

    <div class="form-group row">
      <%= f.label :description, class: "col-sm-4 col-form-label text-sm-right" %>
      <div class="col">
        <div>
          <% if @maximum_description_length %>
            <em>(<%= @maximum_description_length %> characters maximum)</em>
          <% end %>
        </div>
        <div><%= f.text_area :description, class: "form-control", maxlength: 140 %></div>
      </div>
    </div>

    <%= recaptcha_v3(action: 'registration') %>

    <div class="actions">
      <div class="form-group row">
        <div class="offset-sm-4 col">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

</div>
