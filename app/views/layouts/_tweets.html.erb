<% if show_list %>
  <div class="tweet-container-list">
<% else %>
  <div class="tweet-container">
<% end %>


  <% tweets.each do |tweet| %>
    <div class="tweet">

      <%= link_to tweet.user, class: "link-item" do %>
        <% if tweet.user.present? %>
          <%= image_tag tweet.user.avatar.url(:thumb), class: "user-img" %>
        <% else %>
          <%= image_tag "/images/noimage.png", class: "user-img" %>
        <% end %>
      <% end %>

      <%= link_to tweet, class: "link-item" do %>
        <div class="hukidasi">

          <% if show_parent && tweet.parent_id? && tweet.parent_id != 0 %>
            <div class="content-desc">
              <div class="content-desc-parent">
                <% if Tweet.find_by(id: tweet.parent_id).present? %>
                  <div class="glyphicon glyphicon-share-alt" aria-hidden="true"></div>
                  <div class="content-parent-text word-break">
                    <%= omit_word(Tweet.find(tweet.parent_id).content) %>
                  </div>
                <% else %>
                  <div class="glyphicon glyphicon-share-alt" aria-hidden="true"></div>
                  <div class="content-parent-text">
                    削除されました
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <div class="content">
            <% if tweet.image? %>
              <div class="content-image">
                <%= image_tag tweet.image.url(:thumb), class: "fit" %>
              </div>
            <% end %>
            <div class="content-text word-break">
              <%= omit_word(tweet.content) %>
            </div>
          </div>
          <div class="content-desc">
            <% if tweet.user.present? %>
              <div class="content-desc-name"><%= tweet.user.name %></div>
            <% else %>
              <div class="content-desc-name">削除されたユーザー</div>
            <% end %>
          </div>
          <div class="content-desc content-desc-flex-row-right">
            <div class="count-comment"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= tweet.res_count %></div>
            <div class="space"> | </div>
            <div class="count-good"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> <%= tweet.good_count %></div>
            <div class="space"> | </div>
            <div class="count-good"><span class="glyphicon glyphicon-star" aria-hidden="true"></span> <%= tweet.bookmark_count %></div>
          </div>
        </div>
      <% end %>

    </div>
  <% end %>

</div>
