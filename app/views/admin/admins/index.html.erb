<p id="notice"><%= notice %></p>

<h1>Admins</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>User</th>
      <th>Permission</th>
      <th>Create datetime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.user_id %></td>
        <td><%= admin.permission %></td>
        <td><%= admin.create_datetime %></td>
        <td><%= link_to 'Show', [:admin, admin] %></td>
        <td><%= link_to 'Edit', edit_admin_admin_path(admin) %></td>
        <td><%= link_to 'Destroy', [:admin, admin], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin', new_admin_admin_path %>
