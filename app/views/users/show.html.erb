<%= render partial: "/layouts/user", locals: { user: @user, tags: @tags, show_control: true } %>

<%= render_async load_path(mode: "user", id: @user.id, page: 1, show_list: "false", show_parent: "true", infinite_scroll: "true"), event_name: "tweet-loaded" do %>
  <div class="tweet-loading"><i class="fa fa-spinner fa-pulse"></i> Loading...</div>
<% end %>
