<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Id</th>
      <th>User</th>
      <th>Parent</th>
      <th>Content</th>
      <th>Create datetime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.id %></td>
        <td><%= tweet.user_id %></td>
        <td><%= tweet.parent_id %></td>
        <td><%= tweet.content %></td>
        <td><%= tweet.create_datetime %></td>
        <td><%= link_to 'Show', [:admin, tweet] %></td>
        <td><%= link_to 'Edit', edit_admin_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', [:admin, tweet], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_admin_tweet_path %>
