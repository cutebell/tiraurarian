<%= render partial: "/layouts/tweets", locals: { tweets: @root_tweets, show_list: true, show_parent: false } %>

<div class="tweet-container">

  <div class="tweet-large">

    <%= link_to @tweet.user, class: "link-item" do %>
      <% if @tweet.user.present? %>
        <%= image_tag @tweet.user.avatar.url(:thumb), class: "user-img" %>
      <% else %>
        <%= image_tag "/images/noimage.png", class: "user-img" %>
      <% end %>
    <% end %>

    <div class="hukidasi-large text-big">

      <% if user_signed_in? %>
        <div class="content-control">
          <div>
            <% if @gooded.present? %>
              <%= form_for(@gooded, method: :delete) do |form| %>
                <%= form.hidden_field :tweet_id, value: @tweet.id %>
                <%= form.submit "Good!解除", class: "btn btn-warning" %>
              <% end %>
            <% else %>
            <%= form_for(@good) do |form| %>
              <%= form.hidden_field :tweet_id, value: @tweet.id %>
              <%= form.submit "Good!", class: "btn btn-primary" %>
            <% end %>
            <% end %>
          </div>

          <div>
            <% if @bookmarked.present? %>
            <%= form_for(@bookmarked, method: :delete) do |form| %>
              <%= form.hidden_field :tweet_id, value: @tweet.id %>
              <%= form.submit "ブックマーク解除", class: "btn btn-warning" %>
            <% end %>
            <% else %>
              <%= form_for(@bookmark) do |form| %>
                <%= form.hidden_field :tweet_id, value: @tweet.id %>
                <%= form.submit "ブックマーク", class: "btn btn-primary" %>
              <% end %>
            <% end %>
          </div>

          <div>
            <% if @tweet.user_id == current_user.id %>
              <%= link_to "削除", @tweet, method: :delete, class: "btn btn-danger", data: { confirm: "本当に削除しますか？" } %>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="content">
        <div class="content-text word-break">
          <%= to_link(omit_word(@tweet.content)).html_safe %>
        </div>
      </div>

      <% if @tweet.image? %>
        <div class="content-image">
          <%= link_to @tweet.image.url(:large), class: "link-item" do %>
            <%= image_tag @tweet.image.url(:thumb_large), class: "fit" %>
          <% end %>
        </div>
      <% end %>

      <div class="content-desc">
        <% if @tweet.user.present? %>
          <div class="content-desc-name"><%= @tweet.user.name %></div>
        <% else %>
          <div class="content-desc-name">削除されたユーザー</div>
        <% end %>
        <div class="content-desc-datetime"><%= @tweet.create_datetime.strftime("%Y/%m/%d %H:%M:%S") %></div>
      </div>

      <div class="content-desc content-desc-flex-row-right">
        <div class="count-comment"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= @tweet.res_count %></div>
        <div class="space"> | </div>
        <div class="count-good"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> <%= @tweet.good_count %></div>
        <div class="space"> | </div>
        <div class="count-good"><span class="glyphicon glyphicon-star" aria-hidden="true"></span> <%= @tweet.bookmark_count %></div>
      </div>

      <div class="good-list">
        <% Good.where(tweet_id: @tweet.id).order(id: :desc).each do |good| %>
          <%= image_tag good.user.avatar.url(:thumb), class: "good-user-img" %>
        <% end %>
      </div>

    </div>

  </div>

</div>

<div id="tweet-form" class="tweet-form">
  <p class="prompt">このつぶやきにレス</p>
  <%= render partial: "/layouts/form", locals: { tweet: @new_tweet, value: "" } %>
</div>

<%= render partial: "/layouts/tweets", locals: { tweets: @res_tweets, show_list: false, show_parent: false } %>

<%= link_to "Back", tweets_path %>
</div>
