
<div class="devise-container">

  <h2>ユーザー情報設定</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal", role: "form", method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label text-sm-right"><%= f.label :login_id %></label>
      <div class="col"><%= f.text_field :login_id, class: "form-control", maxlength: 16, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label text-sm-right"><%= f.label :name %></label>
      <div class="col">
        <div><%= f.text_field :name, class: "form-control", maxlength: 16 %></div>
        <div>
          <% if @maximum_name_length %>
            <em>(<%= @maximum_name_length %> characters maximum)</em>
          <% end %>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label text-sm-right"><%= f.label :password %></label>
      <div class="col">
        <div><i>変更しない場合、空欄にしてください</i></div>
        <div><%= f.password_field :password, class: "form-control", autocomplete: "new-password" %></div>
        <div>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label text-sm-right"><%= f.label :password_confirmation %></label>
      <div class="col"><%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %></div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label text-sm-right"><%= f.label :avatar %></label>
      <div class="col"><%= f.file_field :avatar %></div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label text-sm-right"><%= f.label :description %></label>
      <div class="col">
        <div><%= f.text_area :description, class: "form-control", maxlength: 140 %></div>
        <div>
          <% if @maximum_description_length %>
            <em>(<%= @maximum_description_length %> characters maximum)</em>
          <% end %>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label text-sm-right"><%= f.label :current_password %></label>
      <div class="col">
        <div><i>設定を変更する場合には、現在のパスワードを入力してください</i></div>
        <div><%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %></div>
      </div>
    </div>

    <div class="actions">
      <div class="form-group row">
        <div class="offset-sm-4 col">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

</div>

<div class="devise-container">

  <h3>ユーザー削除</h3>

  <p>
    <%= button_to "ユーザーを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-danger" %>
  </p>

</div>
